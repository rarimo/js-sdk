{
  "name": "@rarimo/provider",
  "version": "1.5.0-rc.8",
  "description": "Features of the Rarimo SDK that provide access to wallets and wrap the wallet extension providers from different EVM and non-EVM chains to one common interface for ease of use",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarimo/js-sdk/tree/main/packages/provider"
  },
  "license": "MIT",
  "sideEffects": false,
  "typesVersions": {
    ">=4.2": {
      "*": [
        "./dist/types/*"
      ]
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/esm/index.js",
  "node": "./dist/cjs/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm && node ./postbuild.js",
    "build:types": "tsc -p tsconfig.build.json --outDir ./dist/types --declaration --emitDeclarationOnly",
    "build:cjs": "npx swc src -d ./dist/cjs --config-file ../../.swcrc -C module.type=commonjs",
    "build:esm": "npx swc src -d ./dist/esm --config-file ../../.swcrc -C module.type=es6 isModule=true",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@distributedlab/tools": "^0.2.0-rc.9",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/properties": "^5.7.0",
    "@near-wallet-selector/core": "^7.8.2",
    "@near-wallet-selector/my-near-wallet": "^7.8.2",
    "@solana/web3.js": "^1.73.2",
    "bs58": "^5.0.0",
    "ethers": "^5.7.2",
    "near-api-js": "^1.1.0",
    "web3-core": "^1.8.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "tsc-alias": "^1.8.2",
    "web3": "^1.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md",
    "displayName": "@rarimo/provider"
  }
}
