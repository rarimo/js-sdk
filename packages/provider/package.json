{
  "name": "@rarimo/provider",
  "version": "1.0.0",
  "description": "The @rarimo/provider TypeScript package which wraps managing multiple (EVM and non EVM type) chains wallet extension providers to the one common interface.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarimo/js-sdk/tree/main/packages/provider"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "main": "./lib/cjs/index.js",
  "unpkg": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "browser": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm && yarn build:browser",
    "build:browser": "yarn node ../../esbuild.js",
    "build:cjs": "babel src --out-dir lib/cjs --extensions \".ts,.tsx\" --config-file ./babel.config.node.json",
    "build:esm": "babel src --out-dir lib/esm --extensions \".ts,.tsx\" --config-file ./babel.config.json",
    "build:types": "tsc --emitDeclarationOnly && tsc-alias -p tsconfig.json",
    "clean": "rm -rf lib",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.0"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.73.2",
    "ethers": "^5.7.0",
    "web3": "^1.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md",
    "displayName": "@rarimo/provider"
  }
}
