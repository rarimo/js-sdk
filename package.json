{
  "name": "@rarimo/js-sdk",
  "private": true,
  "description": "TypeScript-based source development script for Rarimo Protocol",
  "keywords": [
    "sdk",
    "rarimo"
  ],
  "homepage": "https://github.com/rarimo/js-sdk",
  "bugs": {
    "url": "https://github.com/rarimo/js-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rarimo/js-sdk.git"
  },
  "license": "MIT",
  "author": "Rarimo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "docs": "typedoc --options typedoc.json",
    "lint": "eslint packages/* --ext .ts,.tsx --fix",
    "publish-packages": "yarn build && lerna publish from-package",
    "test": "jest --verbose true",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^26.0.21",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "babel-plugin-root-import": "^6.6.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.1",
    "lerna": "^5.1.8",
    "node-stdlib-browser": "^1.2.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.2",
    "typedoc": "^0.23.8",
    "typescript": "^4.9.5",
    "yorkie": "^2.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "gitHooks": {
    "pre-commit": "yarn lint && lerna run type-check"
  }
}
